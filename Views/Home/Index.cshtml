@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">
        <i class="bi bi-mortarboard text-primary"></i>
        Bienvenido al Sistema de Gestión
    </h1>
    <h2 class="text-primary">Colegio San José</h2>
    <p class="lead mt-4">Sistema de administración de alumnos, materias y expedientes académicos</p>

    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-people display-3 text-primary"></i>
                    <h5 class="card-title mt-3">Alumnos</h5>
                    <p class="card-text">Gestiona la información de los estudiantes</p>
                    <a asp-controller="Alumnos" asp-action="Index" class="btn btn-primary">
                        Ir a Alumnos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-book display-3 text-primary"></i>
                    <h5 class="card-title mt-3">Materias</h5>
                    <p class="card-text">Administra las materias del colegio</p>
                    <a asp-controller="Materias" asp-action="Index" class="btn btn-primary">
                        Ir a Materias
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-folder2 display-3 text-primary"></i>
                    <h5 class="card-title mt-3">Expedientes</h5>
                    <p class="card-text">Registra las notas y observaciones</p>
                    <a asp-controller="Expedientes" asp-action="Index" class="btn btn-primary">
                        Ir a Expedientes
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card shadow-sm bg-light">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line display-4 text-success"></i>
                    <h5 class="card-title mt-3">Reportes y Promedios</h5>
                    <p class="card-text">Consulta los promedios académicos por alumno</p>
                    <a asp-controller="Expedientes" asp-action="PromedioPorAlumno" class="btn btn-success">
                        Ver Promedios
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>