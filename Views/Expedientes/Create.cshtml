@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Crear expediente";
}

<h1>Crear expediente</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" id="formCrearExpediente">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="AlumnoId"
                       class="control-label">Alumno</label>
                @Html.DropDownListFor(model => model.AlumnoId,
                ViewData["AlumnoId"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()),
                                "Seleccione un alumno",
                                new { @class = "form-control", id = "AlumnoId" })
                <span asp-validation-for="AlumnoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="MateriaId" class="control-label">Materia</label>
                @Html.DropDownListFor(model => model.MateriaId,
                                ViewData["MateriaId"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()),
                                "Seleccione una materia",
                                new { @class = "form-control", id = "MateriaId" })
                <span asp-validation-for="MateriaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="NotaFinal" class="control-label">Nota final</label>
                <input asp-for="NotaFinal" class="form-control" />
                <span asp-validation-for="NotaFinal" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Observaciones" class="control-label">Observaciones</label>
                @Html.TextAreaFor(model => model.Observaciones, 5, 60, new { @class = "form-control" })
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Pequeño safeguard: cuando se haga submit, deshabilita el botón para evitar dobles clicks
        (function() {
            const form = document.getElementById('formCrearExpediente');
            if (form) {
                form.addEventListener('submit', function () {
                    const btn = form.querySelector('button[type="submit"]');
                    if (btn) btn.disabled = true;
                });
            }
        })();
    </script>
}
