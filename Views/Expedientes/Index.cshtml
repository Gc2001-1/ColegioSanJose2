@model IEnumerable<ColegioSanJose.Models.Expediente>


@{
    ViewData["Title"] = "Expedientes";
}


<h1>Expedientes</h1>


<p>
    <a asp-action="Create" class="btn btn-primary">Agregar nuevo expediente</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>Alumno</th>
            <th>Materia</th>
            <th>Nota Final</th>
            <th>Observaciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Alumno?.Nombre + " " + item.Alumno?.Apellido)</td>
                <td>@item.Materia?.NombreMateria</td>
                <td>@item.NotaFinal</td>
                <td>@item.Observaciones</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExpedienteId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ExpedienteId">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.ExpedienteId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>