@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Editar expediente";
}

<h1>Editar</h1>

<h4>Expediente</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <!-- enviamos el id por la ruta y hacemos POST -->
        <form asp-action="Edit" asp-route-id="@Model.ExpedienteId" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExpedienteId" />

            <div class="form-group mb-2">
                <label asp-for="AlumnoId" class="control-label">Alumno</label>
                @Html.DropDownListFor(model => model.AlumnoId,
                (SelectList)ViewData["AlumnoId"],
                                "Seleccione un alumno",
                                new { @class = "form-control" })
                <span asp-validation-for="AlumnoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="MateriaId" class="control-label">Materia</label>
                @Html.DropDownListFor(model => model.MateriaId,
                                (SelectList)ViewData["MateriaId"],
                                "Seleccione una materia",
                                new { @class = "form-control" })
                <span asp-validation-for="MateriaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="NotaFinal" class="control-label">Nota final</label>
                <input asp-for="NotaFinal" class="form-control" />
                <span asp-validation-for="NotaFinal" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Observaciones" class="control-label">Observaciones</label>
                @Html.TextAreaFor(model => model.Observaciones, 5, 60, new { @class = "form-control" })
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}